extends template/main
append vars
	-
		page_title = 'Student - Quiz'
block content
	main
		section.test
			include ../img/sprite.svg
			.section
				.section-header
					h1.title Practice Test - Section Name
					button.button-white
						span Exit this Quiz
			.section
				.block.test-block
					.test-header
						h5.block-title.test-title
							span Question 1 of 3
						button.test-header-button
							svg
								use(xlink:href='#video-clip')
							svg
								use(xlink:href='#video-clip')
							span Video
						button.test-header-button
							svg
								use(xlink:href='#bookmark-transparent')
							svg
								use(xlink:href='#bookmark')
							span Bookmark
						button.test-header-button
							svg
								use(xlink:href='#edit-transparent')
							svg
								use(xlink:href='#edit')
							span Note
						button.test-header-button
							svg
								use(xlink:href='#error-circle')
							span Report
					.test-inner.middle
						p.test-text
							span Math formula
						p.test-text
							span Text of a question
						ul.answer-list
							li.answer-item.active
								button.answer-button
									span.answer-variant a
									span.answer-value Answer A
								button.answer-wrong
									svg
										use(xlink:href='img/sprite.svg#dismiss-circle')
							li.answer-item(disabled)
								button.answer-button
									span.answer-variant b
									span.answer-value Answer B
								button.answer-wrong
									svg
										use(xlink:href='img/sprite.svg#dismiss-circle')
							li.answer-item
								button.answer-button
									span.answer-variant c
									span.answer-value Answer C
								button.answer-wrong
									svg
										use(xlink:href='img/sprite.svg#dismiss-circle')
							li.answer-item
								button.answer-button
									span.answer-variant d
									span.answer-value Answer D
								button.answer-wrong
									svg
										use(xlink:href='img/sprite.svg#dismiss-circle')
							li.answer-item
								button.answer-button
									span.answer-variant e
									span.answer-value I don't know
								button.answer-wrong
									svg
										use(xlink:href='img/sprite.svg#dismiss-circle')
					.test-footer
						.pagination.pagination-top
							.pagination-info
								span Do 3 questions
							.pagination-links
								a(href='./quiz-result.html').pagination-link.active
									span 1
								a(href='./quiz-result.html').pagination-link
									span 2
								a(href='./quiz-result.html').pagination-link
									span 3
						a(href='./quiz-result.html').button
							span Skip to questions 2
			.hidden
				include parts/report
				include parts/note
				include parts/video
